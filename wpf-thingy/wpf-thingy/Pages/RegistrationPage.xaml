<Page x:Class="wpf_thingy.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf_thingy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Почта</TextBlock>
            <TextBox x:Name="MailTb"></TextBox>
            <TextBlock>Телефон</TextBlock>
            <TextBox x:Name="PhoneTb"></TextBox>
            <Button Width="400" x:Name="Butt" Click="Butt_Click">Ре2гистрирация</Button>
        </StackPanel>
    </Grid>
</Page>
