<UserControl x:Class="wpf_thingy.Pages.ProductionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_thingy.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>

        <Image Source="/Resources/fridge.jpg" >
        </Image>

        <StackPanel HorizontalAlignment="Center"  Grid.Row="4" Orientation="Horizontal" Width="480">
            <Button  Margin="0 0 180 0" Background="#FFFF4747" Foreground="White">Купить</Button>
            <Button Background="White" BorderBrush="White">❤</Button>
            <Button Background="White" BorderBrush="White">.|||.</Button>
        </StackPanel>

    </Grid>
</UserControl>
