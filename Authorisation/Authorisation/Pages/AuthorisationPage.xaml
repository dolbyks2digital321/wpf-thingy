<Page x:Class="Authorisation.Pages.AuthorisationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Authorisation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorisationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Логин</TextBlock>
                <TextBox Margin="10 0" Width="200" x:Name="LoginTbx"></TextBox>
            </StackPanel>

            <StackPanel Margin="0 10" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Пароль</TextBlock>
                <PasswordBox x:Name="PasswordPbx" Margin="10 0" Width="200"></PasswordBox>
            </StackPanel>

            <StackPanel Margin="0 10" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="AuthorizeButt" Click="AuthorizeButt_Click">Авторизоваться</Button>
                <Button x:Name="RegistrateButt" Margin="10 0" Click="RegistrateButt_Click">Зарегистрироваться</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
